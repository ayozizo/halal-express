generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  pending
  inProgress
  delivered
  cancelled
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String?
  phone        String?
  address      String?
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  orders Order[]
}

model Category {
  id        String    @id @default(uuid())
  name      String
  imageUrl  String?
  parentId  String?
  order     Int       @default(0)
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  parent     Category?  @relation("CategoryToCategory", fields: [parentId], references: [id])
  children   Category[] @relation("CategoryToCategory")
  products   Product[]  @relation("ProductCategory", references: [id])
  subProducts Product[] @relation("ProductSubCategory", references: [id])

  @@index([parentId])
}

model Product {
  id            String   @id @default(uuid())
  name          String
  description   String?
  imageUrl      String?
  basePrice     Decimal  @db.Decimal(10, 2)
  isAvailable   Boolean  @default(true)
  optionsJson   Json     @default("[]")
  categoryId    String
  subCategoryId String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  category    Category @relation("ProductCategory", fields: [categoryId], references: [id])
  subCategory Category @relation("ProductSubCategory", fields: [subCategoryId], references: [id])

  orderItems OrderItem[]

  @@index([categoryId])
  @@index([subCategoryId])
}

model Order {
  id              String      @id @default(uuid())
  userId          String
  subtotal        Decimal     @db.Decimal(10, 2)
  deliveryFee     Decimal     @db.Decimal(10, 2)
  total           Decimal     @db.Decimal(10, 2)
  deliveryAddress String
  deliveryPhone   String
  deliveryTime    DateTime
  status          OrderStatus @default(pending)
  paymentIntentId String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user  User       @relation(fields: [userId], references: [id])
  items OrderItem[]

  invoice Invoice?

  @@index([userId])
  @@index([status])
}

model OrderItem {
  id               String   @id @default(uuid())
  orderId          String
  productId        String
  productSnapshot  Json
  selectedOptions  Json     @default("{}")
  quantity         Int
  price            Decimal  @db.Decimal(10, 2)
  extraInstructions String?

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model Invoice {
  id        String   @id @default(uuid())
  orderId   String   @unique
  number    String   @unique
  currency  String   @default("SAR")
  issuedAt  DateTime @default(now())
  createdAt DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}
